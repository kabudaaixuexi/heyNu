page{
  padding-bottom:88rpx ;
}
.container{
  display: flex;
  background: #fff;
  flex-direction: column;
  margin: 24rpx;
  border-radius: 24rpx;
}
.container .row{
  display: grid;
  width: 100%;
  margin: 12rpx 0;
  font-size: 26rpx;
  grid-template-columns: 3fr 1fr 1fr;
}
.container .row .cnt{
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  text-align: center;
}
.container .row .name{
  font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  text-align: left;
  padding-left: 36rpx;
}
.container .row .price{
  text-align: center;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
}
.container .title{
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 32rpx;
  color: #000;
  text-align: center;
  font-weight: 500;
  padding: 36rpx 0;
}

.container .totalPrice{
  display: flex;
  width: 100%;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #000;
  align-items: flex-end;
  padding-right: 36rpx;
  box-sizing: border-box;
  margin: 24rpx 0;
}


.container .place{
  display: flex;
  font-size: 24rpx;
  width: 100%;
}
.place .cancel{
    width: 50%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.place .comfire{
  width: 50%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1296db;
}