.evaluate{

}
.op{
  position: absolute;
  right: 0;
  top: 0;
}
.op_d{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.op_d image{
  width: 40rpx;
  margin-right: 24rpx;
  margin-top:14rpx;
  height: 40rpx;
  display: block;
}
.op_l{
  display: flex;
  margin-right: 12rpx;
  flex-direction: column;
  border-radius: 6rpx;
  overflow: hidden;
  font-size: 22rpx;
  letter-spacing: 6rpx;
  font-weight: 500;
  margin-top: 8rpx;
}
.show_op{
  transition: .8s;
  opacity: 1;
} 
.hidden_op{
  transition: .4s;
  opacity: 0;
}
.op_l .op_l_i{
  height: 60rpx;
  width: 160rpx;
  display: flex;
  color: rgb(180, 85, 85);
  align-items: center;
  justify-content: center;
  background: #cdcdcd;

}
.evaluate_item{
  position: relative;
  margin: 24rpx ;
  background: #fff;
  border-radius: 24rpx;
  padding-top: 60rpx;
}
.evaluate_item:last-of-type {
  margin-bottom: 66rpx;
}
.evaluate_item .top{
  font-size: 28rpx;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  padding:36rpx 24rpx;
  white-space: normal;
  margin:0 12rpx;
  border-radius: 12rpx;
  background: #f6f6f6;
}
.evaluate_item .top .date{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  margin-bottom: 16rpx;
  color: #999;
}
.evaluate_item .top .evaluate_img {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
}
.evaluate_item .top .evaluate_img image{
  width: 88rpx;
  display: block;
  margin-right: 36rpx;
  max-height: 66px;
  border-radius: 6rpx;
}
.evaluate_item .container{
}
.evaluate_item .foot{

}
.evaluate_item .foot .review{
  font-size: 28rpx;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  padding:36rpx 24rpx;
  white-space: normal;
  margin:12rpx 12rpx 0;
  border-radius: 12rpx;
  background: #f6f6f6;
}
.evaluate_item .foot .review .reviewdate{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  margin-bottom: 16rpx;
  color: #999;
}
.evaluate_item .foot .options{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 24rpx ;
} 
.evaluate_item .foot .options .btn{
  font-size: 20rpx;
  border-radius: 6rpx;
  padding: 10rpx 24rpx;
}
.can{
  border: 1px solid #1296db;
  color: #1296db;
}
.aly{
  color: #888;
  background: #f6f6f6;
}


/* 弹出层样式 */
.review_dialog{
  padding: 24rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}


.input{
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-size: 26rpx;
  height: auto;
  align-items: flex-start !important;
  font-family: 'Courier New', Courier, monospace;
}
.panel{
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}